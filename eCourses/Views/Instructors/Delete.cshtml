@model eCourses.Models.Instructor

@{
    ViewData["Title"] = "Delete";
}
<style>
    .image-container {
        text-align: center;
        margin-bottom: 20px;
    }

        .image-container img {
            max-width: 100px;
            height: auto;
            border-radius: 5px;
        }

    body {
        background-image: url('https://th.bing.com/th/id/R.f5771a85739c27900e6b85d862f378be?rik=wPXeVu6wtZ8GFg&pid=ImgRaw&r=0');
        background-size: cover;
        background-attachment: fixed;
    }
</style>

<body>
    <h1 class="text-center" style="color: white;">Delete</h1>

    <div class="container" style="background-color: darkred; color: white; font-family: Arial, sans-serif; padding: 20px; border-radius: 5px; max-width: 600px; margin: 0 auto;">
        <div class="text-center image-container">
            <img src="@Model.ImageUrl" class="img-fluid" style="max-width: 100px; height: auto; border-radius: 5px;" />
        </div>
        <h3 class="text-center mt-3">Are you sure you want to delete this?</h3>
        <div class="card-body mt-4">
            <h4 class="card-title">Instructor</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FullName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FullName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.BirthDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.BirthDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nationality)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nationality)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Gender)
                </dd>
            </dl>

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-light btn-lg" style="background-color: grey; color: white;">Back to List</a> |
                <input type="submit" value="Delete" class="btn btn-light btn-lg" style="background-color: red; color: white;" />
            </form>
        </div>
    </div>
</body>
