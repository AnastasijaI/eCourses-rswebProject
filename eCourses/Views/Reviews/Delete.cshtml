@model eCourses.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}
<body style="background-color:lightcoral;">
<div style="text-align: center; margin-top: 50px;">
    <h1 style="color: crimson;">Delete Review</h1>

    <h3 style="color: darkblue;">Are you sure you want to delete this review?</h3>

    <div style="display: inline-block; text-align: left; border: 2px solid lightgray; padding: 20px; background-color: #f8f9fa;">
        <h4 style="color: teal;">Review Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4" style="color: #007bff; font-weight: bold;">
                @Html.DisplayNameFor(model => model.Course)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Course.Description)
            </dd>

            <dt class="col-sm-4" style="color: #007bff; font-weight: bold;">
                @Html.DisplayNameFor(model => model.AppUser)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.AppUser)
            </dd>

            <dt class="col-sm-4" style="color: #007bff; font-weight: bold;">
                @Html.DisplayNameFor(model => model.Comment)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Comment)
            </dd>

            <dt class="col-sm-4" style="color: #007bff; font-weight: bold;">
                @Html.DisplayNameFor(model => model.Likes)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Likes)
            </dd>
        </dl>

        <form asp-action="Delete" style="text-align: center;">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger" style="width: 100px;">Delete</button>
            <a asp-action="Index" class="btn btn-secondary" style="margin-left: 20px; width: 100px;">Back</a>
        </form>
    </div>
</div>
</body>