@model eCourses.Models.Review

@{
    ViewData["Title"] = "Edit Review";
}
<body style="background-color:lightblue;">
<div style="text-align: center; margin-top: 50px;">
    <h1 style="color: #007bff;">Edit Review</h1>

    <div style="display: inline-block; text-align: left; border: 2px solid lightgray; padding: 20px; background-color: #f8f9fa;">
        <h4 style="color: teal;">Review Information</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CourseId" />

            <div class="form-group">
                <label asp-for="CourseId" class="control-label" style="color: #007bff;">Course</label>
                <input type="text" class="form-control" value="@Model.Course?.Title" readonly />
            </div>

            <div class="form-group">
                <label asp-for="AppUser" class="control-label" style="color: #007bff;">User</label>
                <input asp-for="AppUser" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Comment" class="control-label" style="color: #007bff;">Comment</label>
                <textarea asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

                <div class="form-group">
                    <label asp-for="Likes" class="control-label" style="color: #007bff;">Rating</label>
                    <select asp-for="Likes" class="form-control">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <span asp-validation-for="Likes" class="text-danger"></span>
                </div>

            <div class="form-group" style="text-align: center; margin-top: 20px;">
                <input type="submit" value="Save" class="btn btn-primary" style="width: 100px;" />
            </div>
        </form>
        <div style="text-align: center; margin-top: 10px;">
            <a asp-action="Index" class="btn btn-secondary" style="width: 100px;">Back</a>
        </div>
    </div>
</div>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
