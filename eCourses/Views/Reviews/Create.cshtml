@model eCourses.Models.Review

@{
    ViewData["Title"] = "Create Review";
}

<div style="text-align: center; margin-top: 50px;">
    <h2 style="color: #007bff;">Create Review</h2>

    <form asp-action="Create" style="display: inline-block; text-align: left; border: 2px solid lightgray; padding: 20px; background-color: #f8f9fa; width: 400px;">
        <div class="form-group">
            <label asp-for="AppUser" class="control-label" style="color: #007bff;">User</label>
            <textarea asp-for="AppUser" class="form-control"></textarea>
            <span asp-validation-for="AppUser" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Comment" class="control-label" style="color: #007bff;">Comment</label>
            <textarea asp-for="Comment" class="form-control"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Likes" class="control-label" style="color: #007bff;">Rating</label>
            <select asp-for="Likes" class="form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <span asp-validation-for="Likes" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="CourseId" />
        <div class="form-group" style="text-align: center;">
            <input type="submit" value="Create" class="btn btn-primary" style="width: 100px;" />
        </div>
    </form>
</div>

