@model IEnumerable<eCourses.Models.UserCourse>

@{
    ViewData["Title"] = "My Courses";
}
<style>
    body{
        background-color: lightblue;
    }
    .card {
        width: 100%;
        height: 400px;
        display: flex;
        flex-direction: column;
    }

        .card img {
            height: 150px;
            object-fit: cover;
            border-bottom: 1px solid #ddd;
        }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        margin-top: 10px;
    }

    .card-text {
        color: #555;
        flex-grow: 1;
    }

    .btn-primary {
        background-color: darkblue;
        border-color: darkblue;
    }

        .btn-primary:hover {
            background-color: lightblue;
            border-color: darkblue;
        }

</style>
<body>
    <h1>@ViewData["Title"]</h1>
    @* for @ViewBag.UserName *@

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="@item.Course.Image" alt="@item.Course.Title" class="card-img-top">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Course.Title</h5>
                        <p class="card-text">@item.Course.Description</p>
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.Course.Id" class="btn btn-primary mt-auto">View Details</a>
                        <div class="col-md-6 col-sm-6 col-xs-6" style="margin-top:10px;">
                            <form method="post" asp-controller="UserCourses" asp-action="Delete" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-danger float-end">Remove from cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>